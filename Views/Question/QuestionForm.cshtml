<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Question Add/Edit</h5>
                <!-- No Labels Form -->
                <form class="row g-3">
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" required placeholder="Question Text">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" required placeholder="Correct Option">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" required placeholder="Option A">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" required placeholder="Option B">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" required placeholder="Option C">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" required placeholder="Option D">
                    </div>
                    <div class="col-md-6">
                        <label for="exampleFormControlInput1" class="form-label">IsActive</label>&nbsp;&nbsp;&nbsp;
                        <div class="form-check form-check-inline">
                            <input class="form-check-input  border border-black" type="radio" name="inlineRadioOptions" id="inlineRadio1" checked value="True">
                            <label class="form-check-label" for="inlineRadio1">True</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input  border border-black" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="False">
                            <label class="form-check-label" for="inlineRadio2">False</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control  border border-black" placeholder="User Name" required>
                    </div>
                    <div class="text-start">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form><!-- End No Labels Form -->
            </div>
        </div>
    </div>
</section>
