@model QuizApplication.Models.User

<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                <div class="d-flex justify-content-center py-4">
                    <a href="/" class="logo d-flex align-items-center w-auto">
                        <img src="~/assets/img/logo.png" alt="">
                        <span class="d-none d-lg-block">Quiz Management</span>
                    </a>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="pt-4 pb-2">
                            <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                            <p class="text-center small">Enter your details to register</p>
                        </div>

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Error"]</div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">@TempData["Success"]</div>
                        }

                        <form asp-action="Register" asp-controller="Auth" method="post" class="row g-3 needs-validation" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="col-12">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" required>
                                <span asp-validation-for="Username" class="invalid-feedback"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control">
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Mobile" class="form-label">Mobile Number</label>
                                <input asp-for="Mobile" type="tel" class="form-control">
                                <span asp-validation-for="Mobile" class="invalid-feedback"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" required>
                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                                <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Create Account</button>
                            </div>
                            <div class="col-12">
                                <p class="small mb-0">Already have an account? <a asp-action="Login" asp-controller="Auth">Log in</a></p>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="credits">
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}}