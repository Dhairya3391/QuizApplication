@model QuizWiseQuestionModel

<div class="pagetitle">
    <h1>Question Forms</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="QuizWiseQuestionForm" asp-controller="QuizWiseQuestion">QuizWiseQuestions</a></li>
            <li class="breadcrumb-item active">QuizWiseQuestionsForm</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Question Add/Edit</h5>


                @using (Html.BeginForm("AddQuizWiseQuestion", "QuizWiseQuestion", FormMethod.Post, new { @class = "row g-3" }))
                {
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.QuizID, "Quiz Name")
                        @Html.TextBoxFor(m => m.QuizID, new { @class = "form-control border border-black", placeholder = "Quiz Name" })
                        @Html.ValidationMessageFor(m => m.QuizID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.QuestionID, "Question Text")
                        @Html.TextBoxFor(m => m.QuestionID, new { @class = "form-control border border-black", placeholder = "Question Text" })
                        @Html.ValidationMessageFor(m => m.QuestionID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.UserID, "User Name")
                        @Html.TextBoxFor(m => m.UserID, new { @class = "form-control border border-black", placeholder = "User Name" })
                        @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
                    </div>

                    <div class="text-start">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                }
                
            </div>
        </div>
    </div>
</section>
