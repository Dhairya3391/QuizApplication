@using System.Data
@model System.Data.DataTable
<div class="pagetitle">
    <h1>User List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="QuizList" asp-controller="Quiz">Quiz</a></li>
            <li class="breadcrumb-item active">User List</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Search User</h5>
                <!-- No Labels Form -->
                <form class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="User Name">
                    </div>
                    <div class="text-start">
                        <button type="submit" class="btn btn-primary">Search</button>   
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form><!-- End No Labels Form -->
                <br>
                <h2 class="card-title">Quiz List</h2>
                <table class="table datatable">

                    <thead>
                        <tr>
                            <th>
                                <b>U</b>ser ID
                            </th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>IsActive</th>
                            <th>IsAdmin</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow datarow in Model.Rows)
                        {
                            <tr>
                                <td>@datarow["UserId"]</td>
                                <td>@datarow["UserName"]</td>
                                <td>@datarow["Email"]</td>
                                <td>@datarow["Mobile"]</td>
                                <td>@datarow["IsActive"]</td>
                                <td>@datarow["IsAdmin"]</td>
                               
                                <td>
                                    
                                    <a asp-action="DeleteUser" asp-controller="User" asp-route-id="@datarow["UserID"]" class="btn btn-danger btn-sm delete-user" title="Delete"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Select all elements with the 'delete-user' class
        document.querySelectorAll('.delete-user').forEach(function (element) {
            element.addEventListener('click', function (event) {
                event.preventDefault(); // Stop the link from navigating immediately
                var url = this.href; // Get the URL from the href attribute

                // Show SweetAlert2 confirmation dialog
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If user confirms, navigate to the delete URL
                        window.location.href = url;
                    }
                });
            });
        });
    });
</script>